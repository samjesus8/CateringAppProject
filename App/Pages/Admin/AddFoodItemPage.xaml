<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Pages.Admin.AddFoodItemPage"
             Title="AddFoodItemPage">

    <StackLayout Padding="30,0" Spacing="5">
        <Button Text="Back" Clicked="OnBackButtonClick" HorizontalOptions="Start" Margin="10" BackgroundColor="Black"/>

        <Label FontSize="18" FontAttributes="Bold" Text="ItemID (Automatically Generated)" />
        <Entry Placeholder="ItemID" x:Name="ItemIDEntry" IsReadOnly="True"/>

        <Label FontSize="18" FontAttributes="Bold" Text="Name" />
        <Entry Placeholder="Name" x:Name="NameEntry" />

        <Label FontSize="18" FontAttributes="Bold" Text="Description" />
        <Entry Placeholder="Description" x:Name="DescriptionEntry" />

        <Label FontSize="18" FontAttributes="Bold" Text="Price" />
        <Entry Placeholder="Price" Keyboard="Numeric" x:Name="PriceEntry" />

        <Label FontSize="18" FontAttributes="Bold" Text="Image URL" />
        <Entry Placeholder="ImageURL" x:Name="ImageURLEntry" />

        <Button Text="Create" Clicked="OnSubmitClick" BackgroundColor="Green"/>
    </StackLayout>
    
</ContentPage>