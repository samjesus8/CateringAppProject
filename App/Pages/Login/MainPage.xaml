<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Pages.Login.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="15">

            <Label
                Text="CateringBusinessName"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level1"
                SemanticProperties.Description="Welcome!!!" />

            <Label FontSize="18" FontAttributes="Bold" Text="Username" />
            <Entry Placeholder="Username" x:Name="UsernameEntry" />

            <Label FontSize="18" FontAttributes="Bold" Text="Password" />
            <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry" />

            <StackLayout Orientation="Horizontal" Spacing="5">
                <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="Blue"/>
                <Button Text="Create Account" Clicked="OnCreateAccountClicked" BackgroundColor="Green"/>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
