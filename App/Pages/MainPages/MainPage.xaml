<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Pages.MainPages.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="CateringBusinessName"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level1"
                SemanticProperties.Description="Welcome!!!" />

            <Entry Placeholder="Username" x:Name="UsernameEntry" />
            <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry" />

            <StackLayout Orientation="Horizontal">
                <Button Text="Login" Clicked="OnLoginClicked" />
                <Button Text="Create Account" Clicked="OnCreateAccountClicked" />
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
