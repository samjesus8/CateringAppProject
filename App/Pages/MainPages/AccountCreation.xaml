<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Pages.MainPages.AccountCreation"
             Title="AccountCreation">

    <StackLayout>
        <!-- Back button -->
        <Button Text="Back" Clicked="OnBackButtonClicked" HorizontalOptions="Start" />

        <!-- Username and Password inputs -->
        <Entry Placeholder="Username" x:Name="UsernameEntry" />
        <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry" />

        <!-- Create button -->
        <Button Text="Create" Clicked="OnCreateButtonClicked" />
    </StackLayout>
    
</ContentPage>