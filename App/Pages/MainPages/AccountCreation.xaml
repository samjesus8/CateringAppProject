<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Pages.MainPages.AccountCreation"
             Title="AccountCreation">

    <StackLayout Padding="30,0" Spacing="10">
        <!-- Back button -->
        <Button Text="Back" Clicked="OnBackButtonClicked" HorizontalOptions="Start" BackgroundColor="Black" />

        <!-- Username and Password inputs -->
        <Label FontSize="18" FontAttributes="Bold" Text="Username" />
        <Entry Placeholder="Username" x:Name="UsernameEntry" />
        
        <Label FontSize="18" FontAttributes="Bold" Text="Password" />
        <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry" />

        <!-- Create button -->
        <Button Text="Create" Clicked="OnCreateButtonClicked" BackgroundColor="Green"/>
    </StackLayout>
    
</ContentPage>