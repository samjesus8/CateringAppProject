<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Pages.MainPages.AdminPage"
             Title="AdminPage">
    
    <StackLayout>
        <!-- Button to add a new food item -->
        <Button Text="Add Item" Clicked="OnAddItemClick" HorizontalOptions="End" VerticalOptions="Start" Margin="10" />

        <!-- Button to view current items -->
        <Button Text="View Items" Clicked="OnViewItemsClick" HorizontalOptions="Start" VerticalOptions="Start" Margin="10" />
    </StackLayout>
    
</ContentPage>