<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Pages.MainPages.HomePage"
             Title="HomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Main content -->
        <StackLayout Grid.Row="1">
            <!-- Content of your home page -->
            <Label Text="This is the homepage" VerticalOptions="Center" HorizontalOptions="Center" />
        </StackLayout>

        <!-- Logout button -->
        <Button Text="Logout" Clicked="OnLogoutClicked" HorizontalOptions="End" VerticalOptions="Start" Margin="10" />
    </Grid>

</ContentPage>
